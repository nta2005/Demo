<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:background="#FFFFFF"
        android:id="@+id/appbar_searchbaihat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:drawableLeft="@drawable/ic_search_gray_24dp"
            android:hint="Mời bạn nhập"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

 <RelativeLayout
     android:layout_marginTop="70dp"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

<!--     Từ Khóa Hot-->

     <LinearLayout
         android:id="@+id/txt1"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt2"
        android:paddingStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Từ khóa hot"/>

         <LinearLayout
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

     <TextView
         android:layout_below="@id/txt2"
         android:paddingStart="10dp"
         android:textColor="#E6BFDB"
         android:background="@drawable/text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:textSize="10dp"
         android:text="Crush"/>

         <TextView
             android:layout_marginStart="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/txt2"
             android:background="@drawable/bg_text"
             android:paddingStart="10dp"
             android:text="RADWIMPS"
             android:textColor="#E6BFDB"
             android:textSize="10dp">
         </TextView>


             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:background="@drawable/bg_text"
                 android:paddingStart="10dp"
                 android:text="Về Sớm Nhé"
                 android:textColor="#E6BFDB"
                 android:textSize="10dp">
             </TextView>


             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:background="@drawable/bg_text"
                 android:paddingStart="10dp"
                 android:text="Music Diary"
                 android:textColor="#E6BFDB"
                 android:textSize="10dp">
             </TextView>

         </LinearLayout>

         <LinearLayout
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
         <TextView
             android:layout_marginStart="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/txt2"
             android:background="@drawable/bg_text"
             android:paddingStart="10dp"
             android:text="Anh Là Sinh Viên"
             android:textColor="#E6BFDB"
             android:textSize="10dp">
         </TextView>

             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:background="@drawable/bg_text"
                 android:paddingStart="10dp"
                 android:text="Anh Đéo Cần Gì Nhiều Ngoài Em"
                 android:textColor="#E6BFDB"
                 android:textSize="10dp">
             </TextView>

         </LinearLayout>

<!--         Phần lịch sử tìm kiếm-->

         <LinearLayout
             android:id="@+id/lnls1"
             android:visibility="visible"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:paddingStart="10dp"
                 android:paddingEnd="10dp"
                 android:text="Lịch sử tìm kiếm"
                 android:textColor="#0A0A0A"
                 android:textSize="20dp">
             </TextView>

             <TextView
                 android:layout_marginStart="180dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:paddingStart="10dp"
                 android:text="Xóa"
                 android:textColor="#E6BFDB"
                 android:textSize="10dp">
             </TextView>


         </LinearLayout>

         <LinearLayout
             android:id="@+id/lnls2"
             android:visibility="visible"
             android:layout_marginTop="10dp"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:paddingStart="10dp"
                 android:text="Nờ Tê Nờ Vê Lốc"
                 android:textColor="#0A0A0A"
                 android:textSize="13dp">
             </TextView>

             <TextView
                 android:layout_marginTop="10dp"
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:paddingStart="10dp"
                 android:text="Về Sớm Nha !!"
                 android:textColor="#0A0A0A"
                 android:textSize="13dp">
             </TextView>

             <TextView
                 android:layout_marginTop="10dp"
                 android:layout_marginStart="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/txt2"
                 android:paddingStart="10dp"
                 android:text="Fail Môn thì làm gì ??"
                 android:textColor="#0A0A0A"
                 android:textSize="13dp">
             </TextView>
         </LinearLayout>

     </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/txt1"
        android:id="@+id/recyclerview_searchbaihat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:visibility="gone"
        android:textColor="#F20"
        android:gravity="center"
        android:text="Không có dữ liệu!"
        android:id="@+id/textviewkocodulieu"
        android:textSize="35sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
 </RelativeLayout>
</RelativeLayout>