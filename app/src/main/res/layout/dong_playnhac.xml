<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/playnhac_bg"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="17sp"
            android:textColor="#ffff"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/textview_playnhac_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16sp"
            android:textColor="#ffff"
            android:text="Tên bài hát"
            android:maxLines="1"
            android:maxWidth="330dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textview_playnhac_index"
            android:layout_marginLeft="10dp"
            android:id="@+id/textview_playnhac_tenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:text="Tên ca sĩ"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textview_playnhac_index"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textview_playnhac_tenbaihat"
            android:id="@+id/textview_playnhac_tencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>