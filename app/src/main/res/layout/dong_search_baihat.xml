<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_search_tenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="32dp"
            android:text="Tên bài hát"
            android:textSize="18sp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="270dp"
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_search_tencasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_search_tenbaihat"
            android:layout_alignStart="@+id/textview_search_tenbaihat"
            android:layout_alignLeft="@id/textview_search_tenbaihat"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="Tên ca sĩ"
            android:textSize="16sp"
            android:maxWidth="220dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/content_text_color" />

        <ImageView
            android:id="@+id/imageview_search_luotthich"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/iconlove" />

        <ImageView
            android:id="@+id/imageview_search_baihat"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/images_search"
            android:paddingStart="13dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>