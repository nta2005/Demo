<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="4dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/baihat_bg">

        <TextView
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewtenbaihat"
            android:textSize="18sp"
            android:text="Tên bài hát"
            android:textStyle="bold"
            android:textColor="@color/title_text_color"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="310dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Tên ca sĩ"
            android:textSize="16sp"
            android:textColor="#979797"
            android:maxLines="1"
            android:maxWidth="280dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:layout_below="@+id/textviewtenbaihat"
            android:id="@+id/textviewtencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>